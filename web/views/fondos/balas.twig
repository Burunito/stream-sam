<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
/* OBJECTS */
.background-wrap-1 {
    width: 1280px !important;
    height: 720px !important;
    position: absolute;
    background-size: contain;
    background-repeat: no-repeat;
    background-image: url('../../images/naruto1.jpg');
}

.background-wrap-2 {
    width: 1280px !important;
    height: 720px !important;
    position: absolute;
    background-size: cover;
    background-repeat: no-repeat;
    background-image: url('../../images/naruto2.jpg');
}

.background-wrap-3 {
    width: 1280px !important;
    height: 720px !important;
    position: absolute;
    background-size: contain;
    background-repeat: no-repeat;
    background-image: url('../../images/naruto3.jpg');
}

.shuriken {
  position: absolute;
  width: 100px;
  z-index: 1;
}

#s1 {
  left: -200px;
  top: 100px;
}

#s2 {
  left: -200px;
  top: 500px;
}

#s3 {
  left: 1300px;
  top: 300px;
}

#s4 {
  left: 1300px;
  top: 560px;
}
    </style>
</head>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="../../js/funciones.js"></script>
<script type="text/javascript">
$(document).ready(function() {
  /*
  var positions = [
    {pos:{left:100,top:100}, speed:1000},
    {pos:{left:300,top:500}, speed:1000},
    {pos:{left:500,top:100}, speed:1000},
    {pos:{left:800,top:900}, speed:1000},
    {pos:{left:1000,top:500}, speed:1000},
    {pos:{left:1300,top:0}, speed:1000},
    {pos:{left:-200,top:100}, speed:1000}
  ]; 
  */
  //S1
  var object = $('#s1');
  var positions = [
    {pos:{left:-200,top:100}, speed:1000},
    {pos:{left:1300,top:100}, speed:1000}
  ];
  var speed = positions.reduce(function(sum, current) {
    return sum + current.speed;
  }, 0); 

  setInterval(function(){
    moverPosiciones(object, positions, speed);
  }, speed);
  moverPosiciones(object, positions);
  
  //S2
  var object2 = $('#s2');
  var positions2 = [
    {pos:{left:1300,top:500}, speed:1000},
    {pos:{left:-200,top:500}, speed:1000}
  ];
  var speed2 = positions2.reduce(function(sum, current) {
    return sum + current.speed;
  }, 0); 

  setInterval(function(){
    moverPosiciones(object2, positions2, speed2);
  }, speed2);
  moverPosiciones(object2, positions2);

  //Rotacion shurikens
  var rotation = 0;
  setInterval(function(){
    rotation+=180;
    $('#s1').css({'transform' : 'rotate('+ rotation +'deg)'});
    $('#s2').css({'transform' : 'rotate('+ rotation +'deg)'});
  }, 1000);
});


</script>
<body>
    <div>
      <img src="../../images/bala.png" class="shuriken" id="s1">
    </div>
    <div>
      <img src="../../images/bala1.png" class="shuriken" id="s2">
    </div>
</body>
</html>