    <style>
/* OBJECTS */
@font-face {
  font-family: Urban Jungle;
  src: url(../../webfonts/UrbanJungleDEMO.otf);
}

@font-face {
  font-family: Permanent;
  src: url(../../webfonts/PermanentMarker-Regular.ttf);
}

@font-face {
  font-family: Smile and Wave;
  src: url(../../webfonts/smileandwave.ttf);
}

div {
  font-family: Urban Jungle;
}

.background-wrap-1 {
    width: 1280px !important;
    height: 720px !important;
    position: absolute;
    background-size: contain;
    background-repeat: no-repeat;
    background-image: url('../../images/fondo-negro2.jpg');
}

.perrito {
  position: absolute;
  width: 200px;
  z-index: 1;
}

.perrito-derecha {
  position: absolute;
  width: 200px;
  z-index: 1;
  -webkit-transform: scaleX(-1);
  transform: scaleX(-1);
}

#s1 {
  left: -200px;
  top: 100px;
}

.neblina {
  position: absolute;
  z-index: 1;
  opacity: 0.4;
  width: 100%;
  height: 100%;
}

.texto {
  z-index: 2;
  width: 1280px;
  height: 1024px;
  text-align: center;
  margin: auto;
  position: absolute;
}

p {
  font-family: 'Urban Jungle';
  font-size: 158px;
  color: #8125dc;
}

@keyframes flickerAnimation {
  0%    {color: #9e9d9e;}
  10%   {color: #797979;}
  20%   {color: #dadadc;}
  30%   {color: #808080;}
  40%   {color: #dbdadf;}
  50%   {color: #7a7a7b;}
  60%   {color: #c4c4c5;}
  70%   {color: #4d4d4e;}
  80%   {color: #ababab;}
  90%   {color: #3e3e3e;}
  100%  {color: #9e9d9e;}
}
@-o-keyframes flickerAnimation{
  0%    { color:purple; }
  10%   { color: #2d25dc; }
  20%   { color: #1e1b63; }
  30%   { color: #26244c; }
  40%   { color: #161523; }
  50%   { color: #22212b; }
  60%   { color: #161523; }
  70%   { color: #26244c; }
  80%   { color: #1e1b63; }
  90%   { color: #2d25dc; }
  100%  { color:purple; }
}
@-moz-keyframes flickerAnimation{
  0%    { color:purple; }
  10%   { color: #2d25dc; }
  20%   { color: #1e1b63; }
  30%   { color: #26244c; }
  40%   { color: #161523; }
  50%   { color: #22212b; }
  60%   { color: #161523; }
  70%   { color: #26244c; }
  80%   { color: #1e1b63; }
  90%   { color: #2d25dc; }
  100%  { color:purple; }
}
@-webkit-keyframes flickerAnimation{
  0%    { color:purple; }
  10%   { color: #2d25dc; }
  20%   { color: #1e1b63; }
  30%   { color: #26244c; }
  40%   { color: #161523; }
  50%   { color: #22212b; }
  60%   { color: #161523; }
  70%   { color: #26244c; }
  80%   { color: #1e1b63; }
  90%   { color: #2d25dc; }
  100%  { color:purple; }
}
.animate-flicker {
   -webkit-animation: flickerAnimation 15s infinite;
   -moz-animation: flickerAnimation 15s infinite;
   -o-animation: flickerAnimation 15s infinite;
    animation: flickerAnimation 15s infinite;
}

.neblina {
  position: absolute;
  z-index: 1;
  opacity: 0.4;
  width: 100%;
  height: 100%;
}
    </style>
</head>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="../../js/funciones.js"></script>
<script type="text/javascript">
$(document).ready(function() {
  var object = $('#s1'), 
  horizontal = -200, 
  vertical = 100, 
  positions, 
  derecha=true, 
  abajo=true, 
  arriba=true,
  pasovertical = 160,
  pasohorizontal= 250;
  setInterval(function(){
    positions = [{pos:{left:horizontal, top: vertical}, speed:1000}];
    moverPosiciones(object, positions, 1000);
    if(derecha){
      horizontal += (Math.random() * pasohorizontal) * 1;
      if(abajo && arriba)
        vertical += (Math.random() * pasovertical) * (Math.random() < 0.5 ? -1 : 1 );
      if(!abajo)
        vertical += (Math.random() * pasovertical) * -1;
      if(!arriba)
        vertical += (Math.random() * pasovertical) * 1;
    }
    else{
      horizontal += (Math.random() * pasohorizontal) * -1;
      if(abajo && arriba)
        vertical += (Math.random() * pasovertical) * (Math.random() < 0.5 ? -1 : 1 );
      if(!abajo)
        vertical += (Math.random() * pasovertical) * -1;
      if(!arriba)
        vertical += (Math.random() * pasovertical) * 1; 
    }

    if(horizontal>1360){
      $('#s1').removeClass('perrito-derecha');
      $('#s1').addClass('perrito');
      derecha=false;
    }

    if(horizontal<-400){
      $('#s1').addClass('perrito-derecha');
      $('#s1').removeClass('perrito');
      derecha=true;
    }

    if(vertical < 0)
      arriba = false;

    if(vertical > 650)
      abajo = false;

    if(vertical > 150 && vertical < 500){
      arriba = true;
      abajo =true;
    }

  }, 1500);
  /*
  var background = 1;
  setInterval(function(){
    $('.background').fadeOut(500);
    $('.background-wrap-'+background).fadeIn(500);
    background++;
    if(background==4)
      background = 1;
  }, 10000);
  */
});
</script>
<body>
    <div class="texto">
      <p class="animate-flicker">Iniciando el stream</p>
    </div>
    <div>
      <img src="../../images/mundojack9.gif" class="neblina">
    </div>
</body>
