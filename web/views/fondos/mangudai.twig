    <style>
/* OBJECTS */
.background-wrap-1 {
    width: 1280px !important;
    height: 720px !important;
    position: absolute;
    background-size: contain;
    background-repeat: no-repeat;
    background-color: #14151E;
    background-image: url('../../images/mundojack1.png');
}

.background-wrap-2 {
    width: 1280px !important;
    height: 720px !important;
    position: absolute;
    background-size: cover;
    background-repeat: no-repeat;
    background-image: url('../../images/mundojack2.png');
}

.background-wrap-3 {
    width: 1280px !important;
    height: 720px !important;
    position: absolute;
    background-size: contain;
    background-repeat: no-repeat;
    background-image: url('../../images/mundojack3.jpg');
}

.perrito {
  position: absolute;
  width: 200px;
  z-index: 1;
}

.perrito-derecha {
  position: absolute;
  width: 200px;
  z-index: 1;
  -webkit-transform: scaleX(-1);
  transform: scaleX(-1);
}

#s1 {
  left: -200px;
  top: 100px;
}

.neblina {
  position: absolute;
  z-index: 1;
  opacity: 0.4;
  width: 100%;
  height: 100%;
}
    </style>
</head>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="../../js/funciones.js"></script>
<script type="text/javascript">
$(document).ready(function() {
  var object = $('#s1'), 
  horizontal = -200, 
  vertical = 100, 
  positions, 
  derecha=true, 
  abajo=true, 
  arriba=true,
  pasovertical = 160,
  pasohorizontal= 1500;
  setInterval(function(){
    positions = [{pos:{left:horizontal, top: vertical}, speed:9000}];
    moverPosiciones(object, positions, 9000);
    if(derecha){
      horizontal = 1500;
      derecha=false;
      $('#s1').removeClass('perrito-derecha');
      $('#s1').addClass('perrito');
      if(abajo && arriba)
        vertical += (Math.random() * pasovertical) * (Math.random() < 0.5 ? -1 : 1 );
      if(!abajo)
        vertical += (Math.random() * pasovertical) * -1;
      if(!arriba)
        vertical += (Math.random() * pasovertical) * 1;
    }
    else{
      horizontal = -300;
      derecha=true;
      $('#s1').addClass('perrito-derecha');
      $('#s1').removeClass('perrito');
      if(abajo && arriba)
        vertical += (Math.random() * pasovertical) * (Math.random() < 0.5 ? -1 : 1 );
      if(!abajo)
        vertical += (Math.random() * pasovertical) * -1;
      if(!arriba)
        vertical += (Math.random() * pasovertical) * 1; 
    }

    if(vertical < 0)
      arriba = false;

    if(vertical > 650)
      abajo = false;

    if(vertical > 150 && vertical < 500){
      arriba = true;
      abajo =true;
    }

  }, 9000);
  
});
</script>
<body>
    <div>
      <img src="../../images/mangudai.gif" class="perrito-derecha" id="s1">
    </div>
</body>
</html>