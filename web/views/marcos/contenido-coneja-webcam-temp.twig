  40%   { opacity:0.6; }
  50%   { opacity:0.6; }
  60%   { opacity:0.6; }
  70%   { opacity:0.7; }
  80%   { opacity:0.8; }
  90%   { opacity:0.9; }
  100% { opacity:1; }
}
@-webkit-keyframes flickerAnimation{
  0%   { opacity:1; }
  10%   { opacity:0.9; }
  20%   { opacity:0.8; }
  30%   { opacity:0.7; }
  40%   { opacity:0.6; }
  50%   { opacity:0.6; }
  60%   { opacity:0.6; }
  70%   { opacity:0.7; }
  80%   { opacity:0.8; }
  90%   { opacity:0.9; }
  100% { opacity:1; }
}
.animate-flicker {
   -webkit-animation: flickerAnimation1s infinite;
   -moz-animation: flickerAnimation 1s infinite;
   -o-animation: flickerAnimation 1s infinite;
    animation: flickerAnimation 1s infinite;
}
</style>
</head>
