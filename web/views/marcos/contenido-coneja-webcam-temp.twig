}

.primero{
    top: -14px;
    left: 60px;
    position: absolute;
}

p {
    font-family: 'Merienda One';
    font-size: 26px;
    display: inline;
}

i {
    font-size: 22px !important;
    color: white;
}

.row {
  margin: auto;
  display: inline;
}

.background-wrap {
  display: flex;
  width: 1280px !important;
  height: 720px !important;
  border-radius: 1rem;
  border-image-slice: 1;
  border-width: 5px;
  background-color: white;
