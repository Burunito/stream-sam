  opacity: 0.7;
}


.plaquetachan {
  position: absolute;
  left: 850px;
  width: 430px;
  top: 100px;
}

.neblina {
  position: absolute;
  z-index: 1;
  opacity: 0.4;
  width: 1280px;
  height: 720px;
}

.animate-flicker {
  display: flex;
  width: 1280px !important;
  height: 720px !important;
  background-color: black;
  padding: 2rem;
  border-radius: 1rem;
  background-image: url(../../images/codwz-pared4.jpg);
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}


@keyframes flickerAnimation {
  0%   { opacity:1; }
  10%   { opacity:0.9; }
  20%   { opacity:0.8; }
  30%   { opacity:0.7; }
  40%   { opacity:0.6; }
  50%   { opacity:0.6; }
  60%   { opacity:0.6; }
  70%   { opacity:0.7; }
  80%   { opacity:0.8; }
  90%   { opacity:0.9; }
  100% { opacity:1; }
}
@-o-keyframes flickerAnimation{
  0%   { opacity:1; }
  10%   { opacity:0.9; }
  20%   { opacity:0.8; }
  30%   { opacity:0.7; }
  40%   { opacity:0.6; }
  50%   { opacity:0.6; }
  60%   { opacity:0.6; }
  70%   { opacity:0.7; }
  80%   { opacity:0.8; }
  90%   { opacity:0.9; }
  100% { opacity:1; }
}
@-moz-keyframes flickerAnimation{
  0%   { opacity:1; }
  10%   { opacity:0.9; }
  20%   { opacity:0.8; }
