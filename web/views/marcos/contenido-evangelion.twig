    <link href="https://fonts.googleapis.com/css2?family=Merienda+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
font-family: 'Merienda One', cursive;

body {
    font-family: 'Merienda One';
}

.primero{
    top: -14px;
    left: 60px;
    position: absolute;
}

p {
    font-family: 'Merienda One';
    font-size: 26px;
    display: inline;
}

i {
    font-size: 22px !important;
    color: black;
}

.row {
    margin: auto;
    display: inline;
}

.background-wrap {
    display: flex;
    border-radius: 130px;
    width: 1280px !important;
    height: 720px !important;
    border: 10px solid;
    border-image-slice: 1;
    border-width: 5px;
}

.background-wrap-colors {
  display: -webkit-box;
  display: flex;
  -webkit-box-align: center;
          align-items: center;
  margin: auto;
  position: relative;
  padding: 30% 2em;
  box-sizing: border-box;
  background-clip: padding-box;
  /* !importanté */
  border: solid 5px transparent;
  /* !importanté */
  border-radius: 1em;
}
.background-wrap-colors:before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -1;
  margin: -5px;
  /* !importanté */
  border-radius: inherit;
  /* !importanté */
  background: linear-gradient(90deg, rgb(129 114 232) 0%, rgb(91 57 255) 90%, rgb(90 100 220) 100%);
}

.asuka {
  left: 850px;
  position: absolute;
  width: 450px;
  top: 80px;
}
</style>
</head>
<body>
    <div>
      <img src="../../images/evangelion4.png" class="asuka">
